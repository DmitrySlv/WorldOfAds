<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldOfAds" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Theme No Action Bar. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActionBarCustom">
        <!-- Primary brand color. -->
        <item name="android:textColorSecondary">@color/green_main</item>
    </style>

    <style name="MainContent">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarMainStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Атрибут который задает одинаковый цвет по умолч всем картинкам тулбара НЕ векторным -->
        <item name="colorControlNormal">@color/green_main</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppTheme.Filter" parent="Theme.MaterialComponents.Light">
        <!-- Theme No Action Bar. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>